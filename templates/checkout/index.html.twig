{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
{{ include("parts/navbar.html.twig", {'name': 'Checkout'})}}

<div class="section">
	<div class="container">
        {{ form_start(checkout, {action: path('app_checkout_confirm')})}}
        <div class="row">
        	<div class="col-md-6">
                <div class="heading_s1">
                        <h4>Your delivery Address</h4>
                        <div class="content">
                        {{ form_widget(checkout.address) | replace({'[spr]' : '<br>'}) | raw}}
                        </div>
                        <a href="{{ path('app_address_new')}}" class="btn btn-fill-out btn-block mt-1"> Add New Address</a>
                </div>
                <div class="heading_s1">
                    <h4>Your carrier</h4>
                    <div class="content">
                    {{ form_widget(checkout.carrier) | replace({'[spr]' : '<br>'}) | raw}}

                    </div>
                </div>
                <div class="heading_s1">
                    <h4>Additional information</h4>
                    <div class="form-group mb-0">
                        {{ form_widget(checkout.informations)}}
                    </div>
                </div>
          </div>

          <div class="col-md-6">
                <div class="order_review">
                    <div class="heading_s1">
                        <h4>Your Orders</h4>
                    </div>
                    <div class="table-responsive order_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                
                            </thead>
                            <tbody>
                                {% for element in cart.products %}
                                    <tr>
                                        <td> {{element.product.name}} <span class="product-qty">x {{ element.Quantity}}</span></td>
                                        <td> {{ element.product.price}} K훾</td>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Price with </th>
                                    <td class="product-subtotal">{{ cart.data.subTotal}} K훾</td>
                                </tr>
                                <tr>
                                    <th>Tax</th>
                                    <td class="product-subtotal">{{ cart.data.dph }} K훾</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">{{ cart.data.Total}} K훾</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="payment_method">
                        <div class="heading_s1">
                            <h4>Payment</h4>
                        </div>

                    </div>
                    <button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Place Order</button>
                </div>
          </div>
        </div>
        {{ form_end(checkout)}}
    </div>
</div>

{% endblock %}
